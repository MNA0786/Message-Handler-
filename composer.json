{
    "name": "telegram-bot/render-deploy",
    "description": "Telegram Bot for Render.com deployment",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "chmod -R 755 .",
            "chmod 666 *.json *.txt 2>/dev/null || true"
        ]
    },
    "config": {
        "platform-check": false
    }
}